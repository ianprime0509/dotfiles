#!/bin/sh
# My dwm status.

while true; do
	TIME=`date '+%F %T'`
	VOLUME_PERCENT=`ponymix get-volume`
	if ponymix is-muted; then
		VOLUME="Audio muted (${VOLUME_PERCENT}%)"
	else
		VOLUME="Volume ${VOLUME_PERCENT}%"
	fi
	KEYBOARD="Keyboard `xkblayout-state print %e`"

	xsetroot -name "${KEYBOARD} | ${VOLUME} | ${TIME}"
	sleep 1
done
