#!/bin/sh
BATTERY=${BATTERY:-BAT0}
DIR=/sys/class/power_supply/${BATTERY}
[ -d ${DIR} ] || exit
CHARGE=$(cat ${DIR}/capacity)
STATUS=$(cat ${DIR}/status)
if [ "${CHARGE}" -gt 50 ]; then
    COLOR="#00ff00"
elif [ "${CHARGE}" -gt 25 ]; then
    COLOR="#ffff00"
else
    COLOR="#ff0000"
fi
echo "Battery: ${CHARGE}% (${STATUS})"
echo "${CHARGE}%"
echo "${COLOR}"
