# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base05 $base0D $base00 $base0D $base0D
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    colors {
        background $base00
        separator  $base01
        statusline $base04

        # State             Border  BG      Text
        focused_workspace   $base05 $base0D $base00
        active_workspace    $base05 $base03 $base00
        inactive_workspace  $base03 $base01 $base05
        urgent_workspace    $base08 $base08 $base00
        binding_mode $base00 $base0A $base00
    }
    status_command i3blocks
}

### Misc. stuff
focus_follows_mouse no

# Source .Xresources
exec_always --no-startup-id xrdb ~/.Xresources

# Background
exec_always --no-startup-id sh ~/.fehbg

# Keyboard settings
exec_always --no-startup-id setxkbmap -model pc104 -layout us,us -variant ,intl -option grp:ctrls_toggle,lv3:ralt_switch,caps:ctrl_modifier,esperanto:qwerty,nbsp:level2

### Keybindings

# Alt+Fn+j
bindsym $mod+KP_End exec light -U 10 && pkill -RTMIN+2 i3blocks
# Alt+Fn+k
bindsym $mod+KP_Down exec light -A 10 && pkill -RTMIN+2 i3blocks
# Volume controls
bindsym XF86AudioRaiseVolume exec ponymix increase 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec ponymix decrease 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec ponymix toggle && pkill -RTMIN+1 i3blocks

# Launchers
bindsym $mod+i exec firefox
bindsym $mod+Shift+i exec firefox --private-window
bindsym $mod+p exec x-screenshot          # entire screen
bindsym $mod+Shift+p exec x-screenshot -u # current window
bindsym $mod+m exec edit
