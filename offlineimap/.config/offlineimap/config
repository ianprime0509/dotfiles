[general]
accounts = personal, professional

[Account personal]
localrepository = local-personal
remoterepository = remote-personal
postsynchook = mu index --maildir ~/mail

[Repository local-personal]
type = GmailMaildir
localfolders = ~/mail/personal

[Repository remote-personal]
type = Gmail
remoteuser = ianprime0509@gmail.com
remotepassfile = ~/.secrets/gmail-personal-app-password
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
ssl_version = tls1_2

