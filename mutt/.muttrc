set folder = ~/mail
set mbox_type = Maildir
set realname = "Ian Johnson"
set spoolfile = "+personal/Inbox"

source ~/.mutt/accounts/personal

folder-hook personal/* source ~/.mutt/accounts/personal
folder-hook uva/* source ~/.mutt/accounts/uva
folder-hook professional/* source ~/.mutt/accounts/professional

macro index <F1> "<change-folder> =personal/Inbox<enter>" "go to personal inbox"
macro index <F2> "<change-folder> =uva/Inbox<enter>" "go to uva inbox"
macro index <F3> "<change-folder> =professional/Inbox<enter>" "go to professional inbox"

macro attach S "<save-entry><bol>~/downloads/<eol>" "save to downloads"

# Use abook for address book stuff
# (https://gitlab.com/muttmua/mutt/wikis/MuttGuide/Aliases#mutt-and-abook).
set query_command = "abook --mutt-query '%s'"
bind editor <Tab> complete-query
macro index,pager A "<pipe-message>abook --add-email<return>" "add sender address to abook"
