#!/bin/sh
# Lowest volume to be considered "medium"
THRESH_MED=1
# Lowest volume to be considered "high"
THRESH_HIGH=20
VOLUME=$(pamixer --get-volume)

if [ $(pamixer --get-mute) = true ]; then
    echo "ðŸ”‡ (volume ${VOLUME}%)"
    echo
    echo \#FFFF00
elif [ $VOLUME -lt $THRESH_MED ]; then
    echo "ðŸ”ˆ ${VOLUME}%"
elif [ $VOLUME -lt $THRESH_HIGH ]; then
    echo "ðŸ”‰ ${VOLUME}%"
else
    echo "ðŸ”Š ${VOLUME}%"
fi
